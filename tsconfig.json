{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"],
      "@middlewares": ["middlewares/index.ts"],
      "@common/*": ["common/*"],
      "@common/utils": ["common/utils/index.ts"],
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@shared/*": ["shared/*"],
      "@socket": ["socket/index.ts"],
      "@socket/*": ["socket/*"],
      "@usecases/*": ["shared/usecases/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
